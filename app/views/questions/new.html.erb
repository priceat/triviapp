<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Create a New Question</h1>
  <%= simple_form_for @question do |f| %>
    <%= f.input :question %>
    <%= f.input :category, :collection => Question::CATEGORIES, :label => 'Question Type', :include_blank => false %>
     <%= f.simple_fields_for :answers do |a| %>
        <%= a.input :answer %>
        <%= a.check_box :correctanswer, :checked => false , :value => false, :label => "Correct Answer"  %> Correct Answer

      <% end %>
  <br />
  <%= f.submit "Create", :class => 'btn btn-primary' %>
  <br />
  <% end %>
<br />
</div>