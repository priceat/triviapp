<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Edit Question</h1>
  <%= simple_form_for @question do |f| %>
  <%= f.input :question %>
  <%= f.input :category, :collection => Question::CATEGORIES, :label => 'Question Type', :include_blank => false %>
  <%= f.input :correctanswer, :label => "Correct Answer"%>
  <br />
  <%= f.submit "Edit", :class => 'btn btn-primary' %>
  <br />
<% end %>
<br />
</div>